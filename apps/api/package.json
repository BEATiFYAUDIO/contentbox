{
  "name": "api",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "tunnel:start": "CONTENTBOX_TUNNEL_TARGET=${CONTENTBOX_TUNNEL_TARGET:-http://127.0.0.1:4000} bash scripts/cloudflared-tunnel.sh",
    "tunnel:stop": "pkill -f \"cloudflared tunnel --url\" || true",
    "serve:tailscale": "tailscale serve https / http://127.0.0.1:4000",
    "serve:tailscale:stop": "tailscale serve reset",
    "prisma:migrate": "prisma migrate dev",
    "prisma:generate": "prisma generate",
    "prisma:seed": "prisma db seed",
    "test:storefront-gating": "API_BASE_URL=http://127.0.0.1:4000 DEV_ALLOW_SIMULATE_PAYMENTS=1 npx tsx src/scripts/storefront_gating_test.ts",
    "lnd:setup": "tsx src/scripts/setup_lnd_env_local.ts",
    "lnd:doctor": "tsx src/scripts/doctor_lnd.ts",
    "lnd:validate": "tsx src/scripts/validate_lnd_buy_flow.ts",
    "smoke:buy": "tsx src/scripts/smoke_buy_flow.ts",
    "auth:mint-dev-token": "tsx src/scripts/mint_dev_token.ts"
  },
  "dependencies": {
    "ethers": "^6.9.0",
    "cheerio": "^1.0.0-rc.12",
    "@fastify/cors": "^11.2.0",
    "@fastify/jwt": "^10.0.0",
    "@fastify/multipart": "^9.4.0",
    "@prisma/adapter-pg": "^7.3.0",
    "@prisma/client": "^7.3.0",
    "bcrypt": "^6.0.0",
    "bonjour-service": "^1.1.1",
    "dotenv": "^16.4.5",
    "fastify": "^5.7.2",
    "pg": "^8.17.2",
    "bitcoinjs-lib": "^6.1.0",
    "bip32": "^4.0.0",
    "tiny-secp256k1": "^2.2.3"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/node": "^25.1.0",
    "prisma": "^7.3.0",
    "tsx": "^4.19.2",
    "typescript": "^5.9.3"
  }
}
